{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PATHFINDER",
  "version": "0.1.0",
  "identifier": "dev.akimo.pathfinder",
  "build": {
    "beforeBuildCommand": "deno task --filter ui build",
    "beforeDevCommand": "deno task --filter ui dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../packages/ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "PATHFINDER",
        "width": 1200,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "voicevox_core/dict/**/*",
      "voicevox_core/models/vvms/13.vvm",
      "voicevox_core/onnxruntime/**/*"
    ],
    "targets": "all",
    "icon": ["icons/**/*"]
  }
}
