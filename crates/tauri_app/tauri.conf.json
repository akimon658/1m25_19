  "productName": "PATHFINDER",
  "version": "0.1.0",
  "identifier": "dev.akimo.pathfinder",
  "build": {
    "beforeDevCommand": "deno task --filter ui dev",
    "devUrl": "http://localhost:5173"
  },
  "app": {
