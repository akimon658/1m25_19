{
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "options": {
      "semiColons": false
    }
  },
  "imports": {
    "@tauri-apps/cli": "npm:@tauri-apps/cli@^2.8.4"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "migrate": "sqlx migrate run --source crates/repository/migrations",
    "reset": "rm data/db.sqlite && touch data/db.sqlite && deno task migrate",
    "tauri": "tauri"
  },
  "workspace": ["packages/*"]
}
